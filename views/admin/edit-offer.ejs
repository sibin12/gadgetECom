


<section>
    <div class="container mt-4">
      <div class="row">
        <div class="col-md-6">
          <form action="/admin/edit-offer/<%= offer._id %>" method="post" enctype="multipart/form-data">
            <h2 class="text-center mb-4">Edit Offer</h2>
  
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" id="name" name="name" value="<%= offer.name %>" required>
            </div>
            <div class="form-group">

            <label for="category" class="form-label mt-2">Category:</label>
            <select class="form-select" id="category" name="category">
                <option value=" <%= offer.category %>" selected disabled ><%= offer.category %></option>
                <% category.forEach(category=>{%>
                   
                    <option value="<%= category._id %>"  > 
                        <%= category.categoryName %>
                    </option>
                   
                    <% }) %>
            </select>
            </div>
            <div class="form-group">
                <label for="name">percentage</label>
                <input type="text" class="form-control" id="name" name="percentage" value="<%= offer.percentage %>" required>
              </div>
  
            <div class="form-group">
              <label for="image">Image</label>
              <div class="d-flex align-items-center mt-2">
                <img class="offer-image mr-2" style="width: 70px;height: auto;" src="/uploads/offer/<%= offer.image %>">    '  '
                <input type="file" class="form-control-file" id="image" name="image">
              </div>
            </div>
  
            <button type="submit" class="btn btn-success mt-3">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </section>
  