<div class="col-sm-12 col-xl-12">
    <a href="/admin/add-offer" class="btn btn-info ms-5 mb-3 mt-5">Add Offer</a>
    <div class="bg-light rounded p-4">
      <h6 class="mb-4">Offers</h6>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Offer Name</th>
            <th scope="col"> Category</th>
            <th scope="col">percentage</th>
            <th scope="col">Options</th>
          </tr>
        </thead>
        <tbody>
            <% if(locals.offer ){ %>
          <% offer.forEach((item, index) => { %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td>
              <img class="offer-image" style="width: 70px;height: auto;" src="/uploads/offer/<%= item.image %>">
            </td>
            <td><%= item.name %></td>
            <td><%= item.category.categoryName %></td>
            <td><%= item.percentage %></td>
            <td>
              <a href="/admin/edit-offer/<%= item._id %>" class="btn btn-success btn-sm">Edit</a>
              <a href="/admin/delete-offer/<%= item._id %>" class="btn btn-danger btn-sm"  onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
            </td>
          </tr>
          <% }) %>
          <% }else { %>
            <p>no offer added </p>
            <% } %>
        </tbody>
      </table>
    </div>
  </div>
  