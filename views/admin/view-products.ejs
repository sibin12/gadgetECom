<div class="col-sm-12 col-xl-12">
    <a href="/admin/add-product"  class="btn btn-info ms-5 mb-3 mt-3 " >add product</a>
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Smart Phones</h6>
        <table class="table table-light"  id="myTable">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Image</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Storage</th>
                    <th scope="col">Category</th>
                    <th scope="col">Company</th>
                    <th scope="col">Description</th>
                    <th scope="col">MRP</th>
                    <th scope="col">Price</th>
                    <th scope="col">offer</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
            <% products.forEach((item,index)=>{ %>
                <tr>
                    <th scope="row"><%= index + 1 %></th>
                    <td><img style="width: 50px;height: 50px;" src="/uploads/<%=item.images[0] %>"></td>
                    <td><%=item.name %></td>
                    <td><%=item.storage %></td>
                    <td><%=item.category.categoryName %></td>
                    <td><%=item.company.sub_category %></td>
                    <td><%=item.description %></td>
                    <td><%=item.mrp %></td>
                    <td><%=item.price %></td>
                    <td><%=item.offer %></td>
                    <td><%=item.stockQuantity %></td>
                    <td>
                        <a href="/admin/edit-product/<%=item._id %>" class="btn btn-success">Edit</a>
                        <a href="/admin/delete-product/<%=item._id %>" class="btn btn-danger" 
                            onclick="return confirm('Are you sure you want to delete this product?')">Soft Delete</a>
                    </td>
                </tr>
                <% }) %>
               
            </tbody>
        </table>
    </div>
</div>

