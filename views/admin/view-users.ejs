<div class="col-sm-12 col-xl-12">
  <div class="bg-light rounded h-100 p-4">
    <h6 class="mb-4">Smart Phones</h6>
    <table class="table col-sm-12 col-xl-12" id="userTable"
      style="background: rgb(63, 63, 54);
      background: linear-gradient(90deg, rgb(80, 76, 54) 0%, rgb(68, 77, 90) 46%, rgb(57, 70, 52) 61%, rgb(65, 50, 50) 100%); color: white; border-radius: 10px;">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Mobile</th>
          <th scope="col">Options</th>
        </tr>
      </thead>


      <tbody>
        <% userList.forEach((user, index)=> { %>
          <tr>
            <th scope="row">
              <%= index + 1 %>
            </th>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td>
              <%= user.mobile %>
            </td>
            <td>
              <% if (user.isActive) { %>
                <a href="/admin/blockUser/<%= user._id %>" class="btn btn-success">Block</a>
                <% } else { %>
                  <a href="/admin/unblockUser/<%= user._id %>" class="btn btn-success">Unblock</a>
                  <% } %>
                    <a href="/admin/deleteUser/<%= user._id %>" class="btn btn-danger"
                      onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div> 
</div>   

<script>
  // let table = new DateTable("#userTable")
  $(function(){
    $('#userTable').DataTable();
})
</script>