<head>
    <style>
.container {
 height: fit-content;

}

</style>
</head>
<div>
    <span  class="btn" onclick="goBack()" class="back-button "id="previousArrow" style="color: rgb(8, 0, 0);">
        <i class="zmdi zmdi-arrow-left"></i></span>
        <span  class="btn" onclick="goNext()" class="back-button " id="nextArrow"  style="color: rgb(6, 0, 0);">
            <i class="zmdi zmdi-arrow-right"></i></span>
    </div>
<section class="sign-in" >
    <div class="container">
        <div class="signup-content">
            <div class="signin-image">
                <figure><img src="/img/signin-image.jpg" alt="sign up image"></figure>
                <a href="/signup" class="signup-image-link">Create an account</a>
            </div>

            <div class="signin-form">
                <h2 class="form-title">Sign in with OTP</h2>
                <form action="/loginOtpPost" method="post" name="myForm" onsubmit="return validateForm()" class="register-form" id="login-otp-form">
                    <div class="form-group">
                        <label for="mobile_number"><i class="zmdi zmdi-phone"></i></label>
                        <input type="text" name="mobile" id="mobile" placeholder="Enter your mobile number" maxlength="10" />
                        <span id="mobile-error" style="color: red;"></span>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="send_otp" id="send_otp" class="form-submit" value="Send OTP" />
                    </div>
                    <% if(otpErr){ %>
                        <p style="color: red; text-shadow: tomato;"><%= otpErr %></p>
                        <% } %>
                    <div class="form-group">
                        <a href="/signin"><label for="remember-me" class="label-agree-term"><span><span></span></span>Login with email</label></a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<script>
    function validateForm(){
        var mobile = document.forms["myForm"]["mobile"].value;

    if (!isValidMobile(mobile)) {
        document.getElementById("mobile-error").innerHTML = "Please enter a valid mobile number.";
        return false;
    } else {
        document.getElementById("mobile-error").innerHTML = "";
    } 
    return true;
    }
    // Function to check if mobile number is valid
   function isValidMobile(mobile) {
    var mobile_regex = /^\d{10}$/;
    return mobile_regex.test(mobile);
}

</script>